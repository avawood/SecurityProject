#!/bin/bash

#Given the argument <dirname> will set up a filesystem there.
mkdir ../"$1"
cd ../"$1"

#stored as name, hashed password, password
CTR=0
for token in `cat ../configs/hashed_passwords`; do
# username
  if [ $(($CTR % 3)) -eq "0" ]
  then
    mkdir $token
    cd $token
  fi
# hashed password
  if [ $(($CTR % 3)) -eq "1" ]
  then
    touch hashed_password
    echo "$token" > hashed_password
  fi
# password
  if [ $(($CTR % 3)) -eq "2" ]
  then
       cd ..
  fi
  ((CTR=CTR+1))
done
